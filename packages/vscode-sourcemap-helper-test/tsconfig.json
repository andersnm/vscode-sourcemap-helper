{
    "compilerOptions": {
        "strictNullChecks": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noUnusedLocals": false,

        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "declaration": true
    },
    "include": [ "src/**/*.ts"]
}
